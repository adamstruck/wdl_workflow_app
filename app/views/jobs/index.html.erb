<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Wdl</th>
      <th>Inputs</th>
      <th>Options</th>
      <th>Run at</th>
      <th>Status</th>
      <th>Results</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.wdl_id %></td>
        <td><%= job.inputs %></td>
        <td><%= job.options %></td>
        <td><%= job.run_at %></td>
        <td><%= job.status %></td>
        <td><%= job.results %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

