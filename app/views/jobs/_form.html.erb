<%= form_for(@job, html: { class: 'form-horizontal' }) do |f| %>

  <fieldset>

    <div class='form-group'>
      <% if @job.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% @job.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    
    <div class='form-group'>
      <label for="select" class="col-lg-2 control-label">Workflow</label>      
      <div class="col-lg-10">
        <select class='form-control'>
        </select>
      </div>
    </div>
    
    <div class='form-group'>
      <label class="col-lg-2 control-label">Inputs</label>      
      <!-- <%= f.label :inputs, class: 'col-lg-2 control-label' %> -->
      <div class="col-lg-10">
        <%= f.text_area :inputs, rows: 5, class: 'form-control'%>
      </div>
    </div>
    
    <div class='form-group'>
      <%= f.label :options, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :options, rows: 5, class: 'form-control'%>
      </div>      
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <%= link_to 'Cancel', "javascript:history.back()", class: 'btn btn-default'%>        
      </div>
    </div>
    
  </fieldset>      
<% end %>
