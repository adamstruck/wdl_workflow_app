<%= form_for(@workflow, html: { class: 'form-horizontal' }) do |f| %>

  <fieldset>

    <div class='form-group'>
      <% if @workflow.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@workflow.errors.count, "error") %> prohibited this workflow from being saved:</h2>

          <ul>
            <% @workflow.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class='form-group'>
      <%= f.label :name, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text :name, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :tags, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text :tags, class: 'form-control' %>
      </div>
    </div>
    
    <div class='form-group'>
      <%= f.label :wdl_source, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :wdl_source, rows: 5, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= f.label :options, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :options, rows: 1, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
        <%= link_to 'Cancel', "javascript:history.back()", class: 'btn btn-default'%>        
      </div>
    </div>
    
  </fieldset>  
<% end %>
